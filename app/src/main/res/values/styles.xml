<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- declare the theme name that's actually applied in the manifest file -->
    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="WhiteText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="BlackBoldText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="GreyText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#8C8C8C</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

</resources>
